<div class="container mt-5">

<% if notice %>

<div class="row">
  <div class="col-lg-12">
    <div id="notice" class="alert alert-success">
      <%= notice %>
    </div>
  </div>
</div>

<% end %>


<div class="row">
  <div class="col-lg-12">
      <p id="notice"></p>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Ano nascimento</th>
            <th>Sobre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pessoas.each do |pessoa| %>
            <tr>
              <td><%= pessoa.nome %></td>
              <td><%= pessoa.ano_nascimento %></td>
              <td><%= pessoa.sobre %></td>
              <td><%= link_to 'Visualizar', pessoa %></td>
              <td><%= link_to 'Editar', edit_pessoa_path(pessoa) %></td>
              <td><%= link_to 'Excluir', pessoa, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta pessoa?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>


      <%= link_to "Adicionar Pessoa", new_pessoa_path, class: "btn btn-light" =%>

      </div>

</div>

</div>